<table class="mainTemplate">
    <!-- LOGO - BEGIN -->
    <tr>
        <td class="mainTemplateLogo" align="center">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tr>
                    <td align="center" valign="top" >
                      <img class="imgLogo" src="bemol_logo.png">
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <!-- LOGO - END -->

    <!-- BLOCK TITLE - BEGIN -->
    <tr>
        <td class="mainTemplateTitle" align="center">
            <table>
                <tr>
                    <td align="center" valign="top">
                      <h1>Descontos</h1>
                      <h2>
                      $data_content$
                      </h2>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <!-- BLOCK TITLE - END -->


    <!-- BLOCK CONTENT - BEGIN -->
    <tr>
        <td class="mainContent" align="center">
            <table class="mainContentTable">
              
              <!-- BLOCK IDENTIFICACAO - BEGIN -->
              <tr class="mainContentTable">
                <td class="mainContentTable" align="center">
                  <div class="row nopadding" >
                    <div class="col-xs-6 nopadding"><b>Nome: </b>$nome$</div>
                    <div class="col-xs-6 nopadding"><b>Div: </b>$divisao$</div>
                  </div>
                  <div class="row nopadding">
                    <div class="col-xs-6 nopadding"><b>Cargo: </b>$cargo$</div>
                    <div class="col-xs-6 nopadding"><b>Matrícula: </b>$matricula$</div>
                  </div>
                </td>
              </tr>
              <!-- BLOCK IDENTIFICACAO - END -->
              <tr><td><hr></td></tr>
              <!-- BLOCK TABELA DESCONTOS - BEGIN -->
              <tr class="mainContentTable">
                <td class="mainContentTable">
                  <table width="100%">
                    <thead>
                      <tr>
                        <th style="text-align: center;width:33%">Descrição</th>
                        <th style="text-align: center;width:33%">Vlr.Prestação</th>
                        <th style="text-align: center;width:33%">Restante</th>
                      </tr>
                    </thead>
                    <tbody>
                      $table_content$
                    </tbody>
                    <tfoot>
                      <tr>
                        <td colspan="3"></td>
                      </tr>
                    </tfoot>
                  </table>
                </td>
              </tr>
              <!-- BLOCK TABELA DESCONTOS - END -->
              <tr><td><hr></td></tr>
              <!-- BLOCK Texto - INICIO -->
              <tr class="mainContentTable">
                  <td class="mainContentTable"  >
                    <div class="row nopadding" >
                      <div class="col-xs-6 nopadding" align="right"><b>Valor descontado em folha:</b></div>
                      <div class="col-xs-6 nopadding" align="center">$desconto_mes$</div>
                    </div>
                    <div class="row nopadding">
                      <div class="col-xs-6 nopadding" align="right"><b>Saldo devedor total:</b></div>
                      <div class="col-xs-6 nopadding" align="center">$saldo_devedor$</div>
                    </div>
                    <div class="row nopadding">
                      <div class="col-xs-6 nopadding" align="right"><b>Desconto no próximo mês:</b></div>
                      <div class="col-xs-6 nopadding" align="center">$proximo_mes$</div>
                    </div>
                  </td>
              </tr>
              <!-- BLOCK Texto - END -->

            </table>
        </td>
    </tr>
    <!-- BLOCK CONTENT - END -->
</table>

